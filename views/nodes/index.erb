<h2>Nodes</h2>

<table>
  <thead>
    <th>Hostname</th>
    <th>IP</th>
  </thead>
<% @nodes.each do |node| %>
  <tr>
    <td><a href="/nodes/<%= node.id %>"><%= node.host_name %></a></td>
    <td>IP:<%= node.ip %></a></h2></td>
  </tr>
<% end %>
</table>

<p>
  <h3>Actions</h3>
  <a href="/nodes/new">Add a new node</a>
  <form action="/nodes" method="post">
  <input type="hidden" name="_method" value="delete" />
  <input type="submit" value="Delete all">
</p>
